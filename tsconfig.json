{
    "compilerOptions": {
        "target": "ES2018",
        "lib": [
            "ES2018",
            "DOM"
        ],
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}